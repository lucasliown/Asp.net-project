@model LoginDto
@{
    ViewData["Title"] = "Login";
}


<style>
    .inthecenter{
       justify-content:center;
       padding-top:40px;
    }
     .theCentertext{
       text-align:center;

    }

    .thespace{
        padding-bottom:50px;

    }

     .thespace1{
        padding-top:10px;
    }

</style>

<div class="thespace">
</div>
<h1 class="display-4 theCentertext">Please Login in </h1>

<div class="row  inthecenter">
    <div class="col-md-4">
        <form asp-action="Login">
            <div class="form-group">
                <label asp-for="LoginID" class="control-label"></label>
                <input asp-for="LoginID" class="form-control" />
                <span asp-validation-for="LoginID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Password" class="control-label">Password</label>
                <input id="Password" name="Password" type="password" class="form-control"
                    data-val="true" data-val-required="The Password field is required." />
                @Html.ValidationMessage("Password", new { @class = "text-danger" })
            </div>
            <div class="form-group thespace1">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            @Html.ValidationMessage("LoginFailed", new { @class = "text-danger" })
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
