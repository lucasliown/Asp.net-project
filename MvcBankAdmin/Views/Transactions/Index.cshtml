@using MvcBankAdmin.Models
@using Microsoft.AspNetCore.Http
@model TransactionViewWithTime
@{
    ViewData["Title"] = "Transactions";
}

<div>
    <h3>Your Accounts</h3>

    <form asp-controller="Transactions" asp-action="Index" method="get">
    <p>
        <div class="form-group move">
                <label asp-for="startDate" class="control-label">Start Date</label>
                <input asp-for="startDate" class="form-control" />
                <span asp-validation-for="startDate" class="text-danger"></span>
            </div>
                <div class="form-group move">
                <label asp-for="endDate" class="control-label">End date</label>
                <input asp-for="endDate" class="form-control" />
                <span asp-validation-for="endDate" class="text-danger"></span>
            </div>
        <input type="submit" value="Filter" />
    </p>
</form>
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(x => Model.Transaction[0].TransactionID)</th>
            <th>@Html.DisplayNameFor(x =>Model.Transaction[0].TransactionType)</th>
            <th>@Html.DisplayNameFor(x => Model.Transaction[0].AccountNumber)</th>
             <th>@Html.DisplayNameFor(x => Model.Transaction[0].DestinationAccountNumber)</th>
             <th>@Html.DisplayNameFor(x => Model.Transaction[0].Amount)</th>
             <th>@Html.DisplayNameFor(x => Model.Transaction[0].Comment)</th>
             <th>@Html.DisplayNameFor(x => Model.Transaction[0].TransactionTimeUtc)</th>
            <th></th>
        </tr>
        @foreach (var transaction in Model.Transaction)
        {
            <tr>
                <td>@Html.DisplayFor(x => transaction.TransactionID)</td>             
                 <td>@Html.DisplayFor(x => transaction.TransactionType)</td>
                 <td>@Html.DisplayFor(x => transaction.AccountNumber)</td>
                 <td>@Html.DisplayFor(x => transaction.DestinationAccountNumber)</td>
                 <td>$@Html.DisplayFor(x => transaction.Amount)</td>
                 <td>@Html.DisplayFor(x => transaction.Comment)</td>
                 <td>@Html.DisplayFor(x => transaction.TransactionTimeUtc)</td>
            </tr>
        }
    </table>
</div>
<div>
    <a asp-controller = "Customers" asp-action="Index">Go Back</a>
</div>
