@using Microsoft.AspNetCore.Http
@model Customer
@{
    ViewData["Title"] = "Home";
}
<style>
    .theCenter {
        text-align: center;
    }

</style>

@{
    var isLoggedIn = Context.Session.GetInt32(nameof(Customer.CustomerID)).HasValue;
}
@if (!isLoggedIn)
{
    <div>
        <h1 class="display-4 theCenter">Welcome to Most Common Bank of Australia</h1>

        <div class="text-center">
            <img src="~/img/bank.jpg" alt="bank" />
        </div>
    </div>
}


